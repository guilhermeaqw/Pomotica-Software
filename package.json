{
  "name": "Pomotica",
  "version": "1.1.2",
  "description": "Pomotica - App desktop",
  "main": "main.js",
  "author": "Guinogue",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder -w"
  },
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.pomotica.app",
    "productName": "Pomotica",
    "publish": [
      {
        "provider": "github",
        "owner": "guilhermeaqw",
        "repo": "Pomotica-Software"
      }
    ],
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "index.html",
      "styles-base.css",
      "themes.css",
      "script.js",
      "main.js",
      "preload.js",
      "manifest.webmanifest",
      "service-worker.js"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false
    }
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2"
  }
}
